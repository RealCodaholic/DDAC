@model IEnumerable<DDAC.Models.Booking>

@{
    ViewBag.Title = "Index";
}

<h2>Booking</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookingID)
        </th>
        <th>
            Source
        </th>
        <th>
            Destination
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookingID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SourceDock.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestinationDock.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartureTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BookingID }) |
            @Html.ActionLink("Details", "Details", new { id = item.BookingID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BookingID })
        </td>
    </tr>
}

</table>
